<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
											 xmlns:tools="http://schemas.android.com/tools"
											 xmlns:app="http://schemas.android.com/apk/res-auto"
											 android:orientation="vertical"
											 android:layout_width="match_parent"
											 android:layout_height="match_parent"
											 tools:context=".share.ShareFragment">

	<ImageView
			android:id="@+id/share_image"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			android:padding="8dp"/>

	<EditText
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/share_image"
			android:id="@+id/comment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/share_image"
			android:layout_marginTop="8dp"
			android:hint="Comment (optional)"/>

	<Button android:layout_width="wrap_content"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
			android:text="Share"
			android:id="@+id/share_button"/>

	<RadioGroup
			android:layout_width="wrap_content"
			android:id="@+id/group"
				android:layout_height="wrap_content"
	app:layout_constraintStart_toStartOf="parent"
	app:layout_constraintTop_toBottomOf="@id/comment"
	app:layout_constraintBottom_toTopOf="@id/share_button">
		<RadioButton
				android:id="@+id/fire"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Fire"/>
		<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Trash"
				android:id="@+id/trash"/>
		<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Traffic collision"
				android:id="@+id/carAccident"/>
		<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="true"
				android:text="Other"
				android:id="@+id/other"/>
	</RadioGroup>


</android.support.constraint.ConstraintLayout>